<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.facts.facts.FactActivity"
    android:clickable="true"
    android:background="@drawable/background">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Fact"
        android:id="@+id/nextButton"
        android:layout_marginBottom="85dp"
        android:width="@dimen/dialog_fixed_width_major"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:height="60dp"
        style="@style/btnStyleArsenic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Upon losing battles, apes will tend to maturbate"
        android:id="@+id/factText"
        android:layout_marginTop="60px"
        android:layout_below="@+id/backButton"
        android:layout_alignStart="@+id/nextButton"
        android:textColor="#FFFFFF"
        android:fontFamily="serif"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/backButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="60dp"
        style="@style/btnStyleArsenic"
        android:height="20dp" />

